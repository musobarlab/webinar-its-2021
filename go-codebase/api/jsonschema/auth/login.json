{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "JSON Schema for login payload",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "minLength": 1
        },
        "password": {
            "type": "string",
            "minLength": 6
        }

    },
    "required": [ "username", "password" ],
    "additionalProperties": false
}